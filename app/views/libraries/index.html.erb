<p id="notice"><%= notice %></p>
<div id="container">
  <div class="table">
    <h1>Libraries</h1><table>
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
      <% @libraries.each do |library| %>
          <tr>
            <td><%= library.library_name %>
            <td><%= link_to 'Edit', edit_library_path(library), class: 'crud' %></td>
            <td><%= link_to 'Delete', library_path(library), method: :delete, data: { confirm: 'Are you sure?' }, class: 'crud' %></td>
          <% end %>
          </tr>
      </tbody>
    </table>
    <%= link_to '+ Add Library', new_library_path, class: 'new' %>
    <br>
    <%= link_to 'Back to Orders', orders_path, class: 'button' %>
</div></div>