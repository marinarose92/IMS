<div id="orders-container">
<h1>Add a new Product</h1><br><br>
<%= form_with(model: @product,  local: true) do |f| %>
    <p>
        <%= f.label :product_name, "Product Name" %>
        <p><i>ex. Dell Optiplex 3010</i></p>
        <%= f.text_field :product_name%><br>
        <%= f.label :price, "Product Price" %>
        <%= f.number_field :price, step: :any %><br>
        <%= f.label :vendor, "Vendor " %>
        <%= collection_select(:product, :vendor_id, Vendor.order('vendor_name ASC').all, :id, :vendor_name, {}, { :multiple => false } ) %>
    </p>
    <p>
        <%= f.submit 'Submit' %>
    </p>
<% end %>
</div>