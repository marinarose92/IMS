<p id="notice"><%= notice %></p>
<div id="orders-container">
  <div class="table">
    <h1>Products</h1><br>
    <table><%= link_to '+ Add Product', new_product_path, class: 'new' %>
      <thead>
        <tr>
          <th>Product/Price</th>
        </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
          <tr>
            <td><%= product.product_name %></td>
            <td><%= link_to 'Edit', edit_product_path(product), class: 'crud' %></td>
            <td><%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'crud' %></td>
          <% end %>
          </tr>
      </tbody>
    </table>
</div></div>