<p id="notice"><%= notice %></p>

<div id="container">
  <div class="table">
    <h1>Orders</h1>

      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Library</th>
            <th>Product</th>
            <th>Price</th>
            <th>Serial</th>
            <th>Vendor</th>
            <th>Purchase Order</th>
            <th colspan="7"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.date %></td>
              <td><%= order.library %></td>
              <td><%= order.product %></td>
              <td><%= order.price %></td>
              <td><%= order.serial_no %></td>
              <td><%= order.vendor %></td>
              <td><%= order.po_no %></td>
              <td><%= link_to 'Edit', edit_order_path(order), :class => 'crud' %></td>
              <td><%= link_to 'Destroy', order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'crud' %>
            </tr>
          <% end %>
        </tbody>
      </table>

<br>

