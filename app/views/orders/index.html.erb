<p id="notice"><%= notice %></p>

<div id="orders-container">
  <div class="table">
    <h1>Orders</h1>
   <div id="search-bar">
<%= form_tag(orders_path, method: :get) do %>
  <p>
    <%= text_field_tag :search, nil, placeholder: 'Search by Service Tag' %>
    <%= submit_tag "Search" %>
  </p>
<% end %>
</div>

<div id="date-filter">
  <%= form_tag orders_path, method: :get do %>
    <div id="date-to"><%= text_field_tag 'search[date_from]', @search.date_from %></div>
   <div id="date-from"> <%= text_field_tag 'search[date_to]', @search.date_to %></div>
    <%= submit_tag 'Search Date Range', class: 'btn search-button' %>
  <% end %>

      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Library</th>
            <th>Product/Price</th>
            <th>Serial</th>
            <th>Vendor</th>
            <th>Purchase Order</th>
            <th colspan="7"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.date %></td>
              <td><%= order.library %></td>
              <td><%= order.product %></td>
              <td><%= order.serial_no %></td>
              <td><%= order.vendor %></td>
              <td><%= order.po_no %></td>
              <td><%= link_to 'Edit', edit_order_path(order), :class => 'crud' %></td>
              <td><%= link_to 'Delete', order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'crud' %>
            </tr>
            <% end %>
        </tbody>
      </table>

<br>