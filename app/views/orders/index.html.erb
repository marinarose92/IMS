<p id="notice"><%= notice %></p>

<div id="orders-container">
   <h1 class="title">Inventory</h1>
   <%= link_to '+ Add Item', new_order_path, class: 'new' %><br><br><p>
   <div id="search-svc">
    <%= form_tag(orders_path, method: :get) do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Search by Service Tag' %>
    <%= submit_tag("Go", :style => "height:30px;width:40px;position:relative;top:-40px;left:210px;") %>
<% end %>
</div>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Library</th>
            <th>Product</th>
            <th>Serial #</th>
            <th>Purchase Order</th>
            <th colspan="7"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.date %></td>
              <td><%= order.library.try :name %></td>
              <td><%= order.product.try :product_name %></td>
              <td><%= order.serial_no %></td>
              <td><%= order.po_no %></td>
              <td><%= link_to 'Edit', edit_order_path(order), :class => 'crud' %></td>
              <td><%= link_to 'Delete', order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'crud' %>
            </tr>
            <% end %>
        </tbody>
      </table>

